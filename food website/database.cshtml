@using WebMatrix.Data
@{
    Database db = Database.Open("fooddb");
    var q = "select * from credentials";
    var r = db.Query(q);
    WebGrid grid = new WebGrid(r);
}


@grid.GetHtml(
    tableStyle: "grid",
    alternatingRowStyle: "alt",
    headerStyle: "head",
    columns: grid.Columns(
        grid.Column("Id"),
        grid.Column("username"),
        grid.Column("password")
)
)
