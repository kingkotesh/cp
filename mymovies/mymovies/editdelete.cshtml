@using WebMatrix.Data;
@{ 
    Database db = Database.Open("mymoviesdb");
    var q = "select * from movies";
    var r = db.Query(q);
    WebGrid w = new WebGrid(r);

}

@w.GetHtml(
    columns:w.Columns(w.Column("id"),w.Column("movie"),w.Column("director"),w.Column("hero"),w.Column(format:@<a href="~/modify?id=@item.id">edit/delete</a>)
    )
)
